<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="finance">
        <addColumn tableName="CATEGORY">
            <column name="USER_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="USER_ID" tableName="CATEGORY"/>
    </changeSet>
    <changeSet id="2" author="finance">
        <createIndex indexName="IDX_CATEGORY_USER" tableName="CATEGORY">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="CATEGORY" constraintName="FK_CATEGORY_ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>