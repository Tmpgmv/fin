<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="finance">
        <addColumn tableName="CATEGORY">
            <column name="EXPENSES" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="EXPENSES" defaultNullValue="''" tableName="CATEGORY"/>
    </changeSet>
    <changeSet id="2" author="finance">
        <addColumn tableName="CATEGORY">
            <column name="INCOME" type="DECIMAL(19, 2)"/>
        </addColumn>

        <addNotNullConstraint columnName="INCOME" defaultNullValue="0" tableName="CATEGORY"/>
    </changeSet>
    <changeSet id="3" author="finance">
        <modifyDataType columnName="COMMENT_" newDataType="CLOB" tableName="OPERATION"/>
    </changeSet>
</databaseChangeLog>