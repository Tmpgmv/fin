<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="finance">
        <createTable tableName="CATEGORY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CATEGORY"/>
            </column>
            <column name="LIMIT_" type="DECIMAL(19, 2)"/>
            <column name="TYPE_" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="finance">
        <createTable tableName="OPERATION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_OPERATION"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="WALLET_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="CATEGORY_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="AMOUNT" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="DATE_" type="DATETIME"/>
            <column name="COMMENT_" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="finance">
        <createTable tableName="TRANSFER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TRANSFER"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="FROM_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="TO_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="AMOUNT" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="finance">
        <createTable tableName="WALLET">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_WALLET"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COMMENT_" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="finance">
        <createIndex indexName="IDX_CATEGORY_USER" tableName="CATEGORY">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="CATEGORY" constraintName="FK_CATEGORY_ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="6" author="finance">
        <createIndex indexName="IDX_OPERATION_CATEGORY" tableName="OPERATION">
            <column name="CATEGORY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID" baseTableName="OPERATION"
                                 constraintName="FK_OPERATION_ON_CATEGORY" referencedColumnNames="ID"
                                 referencedTableName="CATEGORY"/>
    </changeSet>
    <changeSet id="7" author="finance">
        <createIndex indexName="IDX_OPERATION_USER" tableName="OPERATION">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="OPERATION"
                                 constraintName="FK_OPERATION_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="8" author="finance">
        <createIndex indexName="IDX_OPERATION_WALLET" tableName="OPERATION">
            <column name="WALLET_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="WALLET_ID" baseTableName="OPERATION"
                                 constraintName="FK_OPERATION_ON_WALLET" referencedColumnNames="ID"
                                 referencedTableName="WALLET"/>
    </changeSet>
    <changeSet id="9" author="finance">
        <createIndex indexName="IDX_TRANSFER_FROM" tableName="TRANSFER">
            <column name="FROM_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FROM_ID" baseTableName="TRANSFER" constraintName="FK_TRANSFER_ON_FROM"
                                 referencedColumnNames="ID" referencedTableName="WALLET"/>
    </changeSet>
    <changeSet id="10" author="finance">
        <createIndex indexName="IDX_TRANSFER_TO" tableName="TRANSFER">
            <column name="TO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TO_ID" baseTableName="TRANSFER" constraintName="FK_TRANSFER_ON_TO"
                                 referencedColumnNames="ID" referencedTableName="WALLET"/>
    </changeSet>
    <changeSet id="11" author="finance">
        <createIndex indexName="IDX_TRANSFER_USER" tableName="TRANSFER">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="TRANSFER" constraintName="FK_TRANSFER_ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="12" author="finance">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="WALLET" constraintName="FK_WALLET_ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>