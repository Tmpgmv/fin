<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://transferListView.title"
      focusComponent="transfersDataGrid">
    <data>
        <collection id="transfersDc"
                    class="com.company.finance.entity.Transfer">
            <fetchPlan extends="_base">
                <property name="from" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="transfersDl" readOnly="true">
                <query>
                    <![CDATA[select e from Transfer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="transfersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="transfersDataGrid.createAction"/>
                <button id="editButton" action="transfersDataGrid.editAction"/>
                <button id="removeButton" action="transfersDataGrid.removeAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="transfersDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="transfersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="transfersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="from"/>
                <column property="to"/>
                <column property="amount"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
