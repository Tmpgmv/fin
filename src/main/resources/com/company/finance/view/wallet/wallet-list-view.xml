<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://walletListView.title"
      focusComponent="walletsDataGrid">
    <data>
        <collection id="walletsDc"
                    class="com.company.finance.entity.Wallet">
            <fetchPlan extends="_base"/>
            <loader id="walletsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Wallet e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <button id="helpButton" icon="vaadin:question-circle"/>
        <genericFilter id="genericFilter"
                       dataLoader="walletsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="walletsDataGrid.createAction"/>
                <button id="editButton" action="walletsDataGrid.editAction"/>
                <button id="removeButton" action="walletsDataGrid.removeAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="walletsDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="walletsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="walletsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
